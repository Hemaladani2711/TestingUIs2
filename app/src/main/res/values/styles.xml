<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:preferenceScreenStyle">@style/PreferenceStyle</item>-->
    </style>
    <style name="TextStyle">
        <item name="android:background">@drawable/textbackground_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="PreferenceStyle">
        <item name="android:layout">@layout/list_view_drawable_layout</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

</resources>
